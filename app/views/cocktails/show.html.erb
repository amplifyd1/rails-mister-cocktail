<h1> <%=  @cocktail.name  %> </h1>
<% @cocktail.doses.each do |dose| %>
  <li> <%= dose.description  %> </li>
  <li> <%= dose.ingredient.name %></li>
  <% end %>
<%= link_to 'Destroy', @cocktail, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Edit', edit_cocktail_path(@cocktail) %>
<%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail) %>
